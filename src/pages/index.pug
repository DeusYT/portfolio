html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        title Valery Juravlev
    body

        include blocks/navigation.pug
        include blocks/works.pug
        include blocks/skills.pug
        include blocks/technology.pug

        +navigation(["Works", "works"], ["About me", "aboutme"], ["Contact me", "contactme"])
        header.header
            .header__logo.wow.fadeInDown(data-wow-duration="0.5s") Dev
            .header__bg
                .header__img
                .header__main
            .header__heading.heading
                h1.heading__name.wow.fadeInDown(data-wow-duration="0.5s") Valery Juravlev
                h2.heading__profession.wow.fadeInDown(data-wow-duration="0.7s") Front-end developer
                a.heading__link(href="#works")
                    img(src="../assets/img/arrow.svg" alt="arrow")
            .header__email
                span.header__text Email: 
                a(href="mailto:valera030219972010@gmail.com" class="header__value") valera030219972010@gmail.com
        main.main
            section.works(id="works")
                h2.works__title Works
                +works(["#", "giant"],
                       ["#", "local-business"],
                       ["#", "wordoutlet"],
                       ["#", "gllacy"],
                       ["#", "toxin"])
            section.aboutme(id="aboutme")
                .aboutme__title
                    h2.aboutme__primary Valery Juravlev
                    h2.aboutme__secondary Frontend developer
                +skills(["Adaptive Layout", "Adaptive layout using flexbox and media queries", "resize"],
                        ["Cross-Browser", "Optimal site display in all modern browsers", "cross-browser"],
                        ["Validation", "Compliance to W3C standards", "validation"],
                        ["Photoshop", "Using photoshop to work with layouts", "photoshop"])(class="aboutme__skills")
                +technology(["HTML5"], ["CSS3"], ["SCSS"], ["Pug"], ["JavaScript"], ["NodeJS"], ["JQueary"], ["AJAX"], ["Git"], ["Webpack"], ["Gulp"], ["PHP"], ["MySQL"], ["Photoshop"], ["Figma"])
                a.aboutme__resume.wow.fadeInDown(href="https://www.superjob.ru/resume/frontend-developer-47538065.html" target="_blank" data-wow-duration=`0.5`)
                    span my resume
            section.contact(id="contactme")
                .contact__wrapper-form
                    h2.contact__title contact me
                    form.contact__form
                            input.contact__input.wow.fadeInDown(placeholder="Full Name")(data-wow-duration="0.3s")
                            input.contact__input.wow.fadeInDown(placeholder="Email")(data-wow-duration="0.5s")
                            textarea.contact__input.contact__input_textarea.wow.fadeInDown(name="message", cols="50", rows="10" placeholder="Your message")(data-wow-duration="0.7s")
                            button.contact__button.wow.fadeInDown(type="submit" )(data-wow-duration="1s") submit
                .contact__bg
        script(src="https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.min.js")